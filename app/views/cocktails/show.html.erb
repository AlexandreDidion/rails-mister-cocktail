<p><%= @cocktail.name %> </p>

<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>

<p>Doses :</p>
<% @cocktail.ingredients.each do |ingredient| %>
  <%= ingredient.name %>
<% end %>

<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= link_to "Delete",
      dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" }  %>
<% end %>




