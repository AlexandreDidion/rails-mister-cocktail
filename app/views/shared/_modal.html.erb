<button type="button" class="button_round" data-toggle="modal" data-target="#new_dose">
  Add a new step
</button>

<div class="modal fade" id="new_dose" tabindex="-1" aria-labelledby="new_dose_Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a new step</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <%= simple_form_for [@cocktail, @dose] do |f| %>
         <%= f.association :ingredient, input_html: { class: 'select2' }  %>
         <%= f.input :description %>
         <%= f.submit 'Confirm', class:"button_round" %>
       <% end %>
      </div>
    </div>
  </div>
</div>
